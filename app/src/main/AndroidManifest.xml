        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeIndigo">
        <activity
            android:name="com.helena.essorfrench.MainTabActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.helena.essorfrench.MainActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize" />
        <activity
            android:name="com.helena.essorfrench.MeaningActivity"
            android:label="@string/title_meaning_activity" />
        <activity android:name="com.helena.essorfrench.FavoriteActivity" />
        <activity android:name="com.helena.essorfrench.AboutActivity" />
        <activity android:name="com.helena.essorfrench.HistoryActivity"/>
    </application>

</manifest>